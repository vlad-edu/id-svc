@model IdService.App.ViewModels.Account.ResetPasswordModel
@{ ViewData["Title"] = "Sign in"; }
@section Head {
    @await Html.PartialAsync("Partial/_FlexBody")
}
<div class="container">
    <main>
        <form class="form-center" method="post" asp-action="ResetPassword">
            <div class="px-3 py-5 border-sm rounded">
                <div class="text-center">
                    <img class="mb-4" src="~/img/logo.svg" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
                </div>

                <div class="mb-3" asp-validation-summary="ModelOnly"></div>
                
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="NewPassword"></label>
                    <input class="form-control" asp-for="NewPassword" />
                    <span asp-validation-for="NewPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label float-start" asp-for="ConfirmPassword"></label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <input asp-for="Id" />
                <input asp-for="Token" />

                <button type="submit" class="w-100 btn btn-primary">
                    @ViewData["Title"]
                </button>
            </div>
            
        </form>
    </main>
</div>