@model IdService.App.ViewModels.Account.LoginViewModel
<header>
    <style>
        #intro {
            /*background-image: url(https://oiplug.com/wp-content/uploads/2017/03/pexels-photo-115045.jpeg);*/
            background: #ADD8E6;
            height: 100vh;
        }

        /* Height for devices larger than 576px */
        @@media (min-width: 992px) {
        #intro {
            margin-top: -58.59px;
        }
        }
        .navbar .nav-link {
            color: #fff !important;
        }
    </style>

    <!-- Navbar -->
    <!-- Background image -->
    <div id="intro" class="bg-image shadow-2-strong">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">
                        <form method="post" asp-action="Login" asp-antiforgery="true" class="bg-white  rounded-5 shadow-5-strong p-5">
                            <div asp-validation-summary="ModelOnly"></div>
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input asp-for="Username" class="form-control"/>
                                <label class="form-label" asp-for="Username"></label>
                                <span asp-validation-for="Username"></span>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input class="form-control" asp-for="Password"/>
                                <label class="form-label" asp-for="Password"></label>
                                <span asp-validation-for="Password"></span>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center">
                                    <!-- Checkbox -->
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin"/>
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Remember me
                                        </label>
                                    </div>
                                </div>

                                <div class="col text-center">
                                    <!-- Simple link -->
                                    <a href="#">Forgot password?</a>
                                </div>
                            </div>
                            <input asp-for="ReturnUrl"/>
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Background image -->
    </header>
    <!--Main Navigation-->
    <!--Footer-->
    <footer class="bg-light text-lg-start">

        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2021 Website
            </div>
        <!-- Copyright -->
    </footer>
    <!--Footer-->