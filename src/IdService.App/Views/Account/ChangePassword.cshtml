@model IdService.App.ViewModels.Account.ChangePasswordModel
@{ ViewData["Title"] = "Change password"; }
@section Head {
    @await Html.PartialAsync("Partial/_FlexBody")
}

<div class="container">
    <main>
        <form class="form-center" method="post" asp-action="ChangePassword">
            <div class="px-3 py-5 border-sm rounded">
                <div class="text-center">
                    <img class="mb-4" src="~/img/logo.svg" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 fw-normal">@ViewData["Title"]</h1>
                </div>

                <div class="mb-3" asp-validation-summary="ModelOnly"></div>

                <div class="mb-3">
                    <label class="form-label" asp-for="OldPassword"></label>
                    <input class="form-control" asp-for="OldPassword" />
                    <span asp-validation-for="OldPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="NewPassword"></label>
                    <input class="form-control" asp-for="NewPassword" />
                    <span asp-validation-for="NewPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>

                <button type="submit" class="w-100 btn btn-primary">
                    Confirm
                </button>
                <nav>
                    <li><a class="active" href="https://localhost:44384/home">Home page</a></li>
                </nav>
            </div>
        </form>
    </main>
</div>
